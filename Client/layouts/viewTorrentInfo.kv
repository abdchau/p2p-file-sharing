# START TORRENT VIEW
<ViewTorrentInfo>:
	canvas:
		Color:
			rgba: 0.45, 0.45, 0.45, 1
		Rectangle:
			size: self.size
			pos: self.pos
	name: "torrent_info"
	tname: tname
	tsize: tsize
	# resultArea: resultArea
	# downloadsArea: downloadsArea
	# search_box: search_box
	orientation: 'vertical'
	anchor_y: 'top'
	
	BoxLayout:
		orientation: 'vertical'

		Label:
			id: tname
			text: 'Torrent name'
		Label:
			id: tsize
			text: 'Torrent size'
		Button:
			text: 'Back'
			on_press:
				root.manager.current = 'home'
				root.manager.transition.direction = 'right'
		Button:
			text: 'Download this torrent'
			on_press: root.download()
# END TORRENT VIEW