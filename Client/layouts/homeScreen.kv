#:kivy 2.0.0
# START HOME SCREEN
<HomeScreen>
	name: "home"
	canvas:
		Color:
			rgba: 0.45, 0.45, 0.45, 1
		Rectangle:
			size: self.size
			pos: self.pos

	browseArea: browseArea
	searchResultsArea: searchResultsArea
	downloadsArea: downloadsArea
	seedsArea: seedsArea
	searchBox: searchBox

	BoxLayout:
		orientation: "vertical"
		BoxLayout:
			size_hint: 1, 0.2
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1
				Line:
					width: 2
					rectangle: self.x, self.y, self.width, self.height
			
			GridLayout:

				rows: 1
				cols: 2
				
				spacing: dp(40)
				
				padding: dp(50), dp(20), dp(50), dp(20)

				Button:
					text: "Upload New Torrent"
					on_press: root.upload_torrent()

				Button:
					text: "Preferences"

		TabbedPanel:
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1
				Line:
					width: 2
					rectangle: self.x, self.y, self.width, self.height

			padding: dp(50), dp(20), dp(50), dp(40)
			do_default_tab: False
			tab_width: (self.width- dp(100)) / 4 
			background_color: (180, 180, 180, 1.0)

			TabbedPanelItem:
				text: 'Browse'
				BoxLayout:

					RecycleView:
						id: browseArea
						scroll_type: ['bars', 'content']
						scroll_wheel_distance: dp(114)
						padding: dp(10), dp(10), dp(10), dp(10)
						bar_width: dp(10)
						viewclass: 'TorrentSummary'
						RecycleBoxLayout:
							default_size: None, dp(64)
							default_size_hint: 1, None
							size_hint_y: None
							height: self.minimum_height
							orientation: 'vertical'
							spacing: dp(1)

			TabbedPanelItem:
				text: 'Search'
				BoxLayout:
					orientation: 'vertical'
					BoxLayout:
						size_hint_y: 0.2
						padding: dp(5)
						spacing: dp(5)
						TextInput:
							id: searchBox
							size_hint_x: 1.8
							multiline:False
							hint_text: 'Search'
							on_text_validate: root.search(self.text)
							padding: dp(10), dp(10), 0, 0
						Button:
							text: 'Search'
							on_press: root.search(searchBox.text)					


					RecycleView:
						id: searchResultsArea
						scroll_type: ['bars', 'content']
						scroll_wheel_distance: dp(114)
						padding: dp(10), dp(10), dp(10), dp(10)
						bar_width: dp(10)
						viewclass: 'TorrentSummary'
						RecycleBoxLayout:
							default_size: None, dp(64)
							default_size_hint: 1, None
							size_hint_y: None
							height: self.minimum_height
							orientation: 'vertical'
							spacing: dp(1)

			TabbedPanelItem:
				text: 'Downloading'
				BoxLayout:
					RecycleView:
						id: downloadsArea
						scroll_type: ['bars', 'content']
						scroll_wheel_distance: dp(114)
						padding: dp(10), dp(10), dp(10), dp(10)
						bar_width: dp(10)
						viewclass: 'TorrentSummary'
						RecycleBoxLayout:
							default_size: None, dp(64)
							default_size_hint: 1, None
							size_hint_y: None
							height: self.minimum_height
							orientation: 'vertical'
							spacing: dp(1)
			TabbedPanelItem:
				text: 'Seeding'
				BoxLayout:
					
					RecycleView:
						id: seedsArea
						scroll_type: ['bars', 'content']
						scroll_wheel_distance: dp(114)
						padding: dp(10), dp(10), dp(10), dp(10)
						bar_width: dp(10)
						viewclass: 'TorrentSummary'
						RecycleBoxLayout:
							default_size: None, dp(64)
							default_size_hint: 1, None
							size_hint_y: None
							height: self.minimum_height
							orientation: 'vertical'
							spacing: dp(1)
# END HOME SCREEN