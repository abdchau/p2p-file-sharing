#:kivy 2.0.0
<TorrentSummary>
    name: "TorrentSummary"
    canvas:
		Color:
			rgba: 0.6, 0.6, 0.6, 1
		Rectangle:
			size: self.size
			pos: self.pos
    
    minimum_height: dp(100)
    detailButton: detailButton
    torrentName: "hello"
    numPeers: "0"
    numPieces: "0"
    torrentSize: "0"
    resultNum: 0

    GridLayout:
        size_hint: 0.8, 1
        rows: 2
        cols: 2

        spacing:dp(10)
        padding: dp(10)

        Label:
            text: root.torrentName

        Label:
            text: root.numPeers
        
        Label:
            text: root.numPieces

        Label:
            text: root.torrentSize

    BoxLayout:
        size_hint: 0.2, 1    
        padding: dp(10)
        id: detailButton
        Button:
            text: "Show Details"
            on_press: root.parent.parent.parent.parent.parent.parent.parent.torrent_info(root.resultNum)